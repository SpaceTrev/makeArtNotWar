<div class="container-fluid text-center">
  <div class="row content">
    <div class="col-sm-2 sidenav">
      <h3>Contact Us</h3>
      <p class="">
         44 Something St <br>
        (555) 555-5555 <br>
        creationstation602@gmail.com <br>
      </p>
     
      <p>
        <a href="/">All jobs</a>
      </p>
      <p>
        <a href="/post">Post job</a>
      </p>

      {{#if user}}
      <p>
        <a href="/myjobs">My jobs</a>
      </p>
      <p>
        <a href="/donejobs">Done jobs</a>
      </p>
      {{/if}}
    </div>
    <div class="col-sm-9">
      <div class="input-form">
        <form method="POST" action="/send" class="text-left">
          <h2 class="text-center">Contact Us</h2>
           {{{msg}}}
          <div class="form-group">
            <label for="title">Name</label>
            <input type="text" class="form-control" placeholder="Name" required="required" name="name">
          </div>
          <div class="form-group">
            <label for="description">Question</label>
            <textarea class="form-control" id="question" name="question" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label for="cost">Email</label>
            <input type="email" class="form-control" placeholder="Email" required="required" name="email">
          </div>
          <div class="form-group">
            <label for="address">Phone Number</label>
            <input type="text" class="form-control" placeholder="(123) 867-5309" name="phone">
          </div>
          <div>
            <button type="submit" class="btn btn-primary btn-block bg-success">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
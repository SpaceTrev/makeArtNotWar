
<body>
  <div class="container">
    <div class="wrapper animated bounceInLeft">
      <div class="company-info float left">
        <h3>Contact US</h3>
        <ul>
          <li><i class="fa fa-road"></i> 44 Something St</li>
          <li><i class="fa fa-phone"></i> (555) 555-5555</li>
          <li><i class="fa fa-envelope"></i> theteam@creationstation.com</li>
        </ul>
      </div>
      <div class="col-sm-10 text-left">
        <h3>Email Us</h3>
        {{msg}}
        <form method="POST" action='/send'>
          <div class="form-group">
            <label>Name</label>
            <input type="text" name="name">
          </div>
          <div class="form-group">
            <label>Type of Request</label>
            <input type="text" name="request" placeholder="Art, Photography, Film, etc..">
          </div>
          <div class="form-group">
            <label>Email Address</label>
            <input type="email" name="email">
          </div>
          <div class="form-group">
            <label>Phone Number</label>
            <input type="text" name="phone">
          </div>
          <div class="full">
            <label>Please describe what you are looking for</label>
            <textarea name="message" rows="5"></textarea>
          </div>
          <div class="full">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">

            <p>
                <a href="/">All jobs</a>
            </p>
            <p>
                <a href="/post">Post job</a>
            </p>

            {{#if user}}
            <p>
                <a href="/myjobs">My jobs</a>
            </p>
            <p>
                <a href="/donejobs">Done jobs</a>
            </p>
            {{/if}}
        </div>
        <div class="col-sm-9">
            <div class="input-form">
                <form class="text-left">
                    <h2 class="text-center">Post a Job</h2>
                    <div class="form-group">
                        <label for="title">Job Title</label>
                        <input type="text" class="form-control" placeholder="Job Title" required="required" id="title">
                    </div>
                    <div class="form-group">
                        <label for="description">Job Description</label>
                        <textarea class="form-control" id="description" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="cost">Cost</label>
                        <input type="text" class="form-control" placeholder="Cost" required="required" id="cost">
                    </div>
                    <div class="form-group">
                        <label for="address">Job Address</label>
                        <input type="text" class="form-control" placeholder="Job Address" id="address">
                    </div>
                    <div>
                    <button type="submit" class="btn btn-primary btn-block bg-success" id="btn-login" data-id="{{this.user.id}}">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>